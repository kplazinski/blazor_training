@page "/list-with-component"
@using BlazorTraining.Model

@foreach (var student in students)
{
    <StudentDetails Name=@student.Name
                LastName=@student.LastName
                Age=@student.Age
                Id=@student.Id
                IsActive=@student.IsActive></StudentDetails>
}

